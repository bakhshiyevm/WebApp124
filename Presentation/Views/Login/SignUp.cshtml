@using DTO
@{
    Layout = "_LoginLayout";
}
       <div class="row d-flex justify-content-center align-items-center h-100 center">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <form method="post">
                            <h3 class="mb-5">Sign Up</h3>


                            <div class="form-outline mb-4">
                                <input type="text" placeholder="Username" class="form-control form-control-lg" name="Username" />
                            </div>

                            <div class="form-outline mb-4">
                                <input type="text" placeholder="Name" class="form-control form-control-lg" name="Name" />
                            </div>

                            <div class="form-outline mb-4">
                                <input type="text" placeholder="Surname" class="form-control form-control-lg" name="Surname" />
                            </div>

                            <div class="form-outline mb-4">
                                <input type="password" placeholder="Password" class="form-control form-control-lg" name="Password" />
                            </div>


                            <button class="btn btn-primary btn-lg btn-block mb-4" type="submit"
                                    asp-controller="Login" asp-action="SignUp">
                                Sign Up
                            </button>

@*
                            <partial name="~/Views/Shared/Message.cshtml" />
*@
                            <div class="form-outline mb-4">
                                Have an account? <a class="form-label" asp-controller="Login"
                                                       asp-action="SignIn">Sign In</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>